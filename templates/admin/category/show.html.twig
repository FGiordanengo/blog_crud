{% extends 'admin/layout.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block content %}
    <h1>{{category.title}}</h1>
    <p>Url : {{ category.slug }}</p>
    <p>{{category.description}}</p>
    <h2>Articles liés</h2>
    <ul>
        {% for article in category.articles %}
        <li>
            <a href="{{ path('admin_article_show', {'id': article.id}) }}">{{article.title}}</a>   

        </li>
        {% else %}
            <li>Aucune article</li>
        {% endfor %}
    </ul>
    <p>
        <a href="{{ path('admin_category_index') }}" class="btn btn-link">Retour à la liste</a>
    </p>
    <p>
        <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary">Modifier</a>
    </p>
    
    {{ include('admin/category/_delete_form.html.twig') }}
{% endblock %}
