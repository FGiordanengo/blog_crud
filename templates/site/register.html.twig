{% extends 'site/layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
    <div class="row">
        <div class="col-6">{{ form_row(registrationForm.username, {'label': 'Votre nom d\'utilisateur'}) }}</div>
        <div class="col-6">{{ form_row(registrationForm.email, {'label': 'Votre adresse mail'}) }}</div>
        <div class="col-6">{{ form_row(registrationForm.password.first, {label: 'Votre mot de passe'}) }}</div>
        <div class="col-6">{{ form_row(registrationForm.password.second, {label: 'Confirmation du mot de passe'}) }}</div>
        <div>{{ form_row(registrationForm.agreeTerms) }}</div>
    </div>      

        <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
